@model Student;   
@*connect data that get in form with model Student*@
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">คะแนนสอบวิชาคอมพิวเตอร์</h1>

<form method="POST" asp-controller="Student" asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
          <input type ="text" asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>@*SHOW Exception from data validation*@
      </div>
    


    <div class="form-group">
        <label asp-for="Score"></label>
        <input type="number" asp-for="Score" class="form-control"/>
        <span asp-validation-for="Score" class="text-danger"></span>@*SHOW Exception from data validation*@
    </div>

    <button type="submit" class="btn btn-primary my-2">บันทึก</button>

</form>